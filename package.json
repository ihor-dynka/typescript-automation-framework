{
    "name": "ts_automation",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "apiTest": "mocha --config ./config/mocha/.mocharc.api.json --reporter mocha-junit-reporter --reporter allure-mocha --reporter-options mochaFile=./report/api/junit.xml",
        "startSelenoid": "docker-compose --file selenoid.yml up -d",
        "stopSelenoid": "docker-compose --file selenoid.yml down",
        "webTest": "mocha --config ./config/mocha/.mocharc.web.json --reporter spec --reporter mocha-junit-reporter --reporter allure-mocha --reporter-options mochaFile=./report/api/junit.xml",
        "eslint": "eslint . --ext .ts,.js --ignore-pattern node_modules",
        "allureReport": "allure generate allure-results --clean -o allure-report && allure open allure-report",
        "clean": "npx rimraf allure-report allure-results test-results.xml selenoid/logs selenoid/video"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/chai": "^4.2.22",
        "@types/node": "^16.11.6",
        "allure-commandline": "^2.17.2",
        "chai": "^4.3.4",
        "chromedriver": "^98.0.0",
        "dotenv": "^10.0.0",
        "envalid": "^7.2.1",
        "got": "^11.8.2",
        "rimraf": "^3.0.2",
        "ts-node": "^10.4.0",
        "tslog": "^3.3.2",
        "typescript": "^4.4.4",
        "webdriverio": "^7.16.13"
    },
    "devDependencies": {
        "@types/chromedriver": "^81.0.0",
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "@typescript-eslint/parser": "^5.3.0",
        "@wdio/mocha-framework": "^7.16.1",
        "allure-mocha": "^2.0.0-beta.15",
        "eslint": "^7.1.0",
        "mocha": "^9.2.1",
        "mocha-junit-reporter": "^2.0.2"
    }
}
