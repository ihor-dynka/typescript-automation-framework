{
  "compilerOptions": {
    "module": "commonjs",
    "types": [
      "node",
      "mocha"
    ],
    "target": "ES5",
    "experimentalDecorators": true,
    "outDir": "./build",
    "removeComments": true,
    "sourceMap": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}